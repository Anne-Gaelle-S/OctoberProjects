<img src={{@onlineProject.illustrationUrl}} alt="" role="none" />
<img
  src="{{this.rootURL}}/icon-flag-{{@onlineProject.businessAddressCountryCode}}.svg"
  alt="{{@onlineProject.name}}'s business country flag ({{@onlineProject.businessAddressCountryCode}})"
/>

<h3>{{@onlineProject.name}}</h3>
{{@onlineProject.description}}

<p>{{@onlineProject.rate}} %</p>
<p>{{@onlineProject.loanDuration}} months • € {{@onlineProject.amount}}</p>
<p>{{@onlineProject.grade}}</p>

{{#if @onlineProject.isFullyFinanced}}
  <LinkTo @route="project" @model={{@onlineProject.id}}>See the project</LinkTo>
{{else}}
  <LinkTo @route="project" @model={{@onlineProject.id}}>€ {{@onlineProject.restToFinance}} to finance</LinkTo>
{{/if}}
<p>{{@onlineProject.durationSinceOnlineInMonths}} months ago</p>
